.top {
  position: relative;
}

.top .ipt {
  width: 350rpx;
  height: 80rpx;
  border: 1rpx solid #f0f0f0;
  margin: 0 auto;
  margin-top: 58rpx;
  font-size: 30rpx;
  padding-left: 15rpx;
  padding-right: 200rpx;
}

.top .btn {
  width: 150rpx;
  height: 50rpx;
  font-size: 30rpx;
  color: #1197f6;
  position: absolute;
  top: 16rpx;
  right: 95rpx;
  border-left: 1rpx solid #f0f0f0;
  text-align: center;
  line-height: 50rpx;
}

.cont {
  width: 500rpx;
  height: 222rpx;
  border: 1rpx solid #f0f0f0;
  box-shadow: 0 0 20rpx 5rpx #f0f0f0;
  margin: 200rpx auto 0;
  text-align: center;
}

.cont text {
  display: block;
}

.cont .txt1 {
  color: #1a1a1a;
  font-size: 32rpx;
  font-weight: 700;
  margin-top: 30rpx;
}

.cont .txt2 {
  font-size: 30rpx;
  margin-top: 30rpx;
  color: #999;
}

.cont .txt3 {
  font-size: 30rpx;
  color: #999;
}
