.box_time {
  margin-top: 20rpx;
  font-size: 26rpx;
}

.box_time .box_time_left {
  width: 220rpx;
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
  border: 1rpx solid #f0f0f0;
  margin-left: 36rpx;
  float: left;
}

.box_time .box_time_jian {
  width: 20rpx;
  height: 70rpx;
  line-height: 70rpx;
  float: left;
