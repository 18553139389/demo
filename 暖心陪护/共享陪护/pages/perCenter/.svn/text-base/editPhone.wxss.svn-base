.edit {
  width: 100%;
  height: 125rpx;
  overflow: hidden;
  margin-top: 10rpx;
  font-size: 30rpx;
  padding: 0 30rpx;
  position: relative;
}

.edit .left {
  float: left;
  margin-top: 45rpx;
  width: 20%;
}

.edit .section {
  float: left;
  border: 1rpx solid #f0f0f0;
  width: 68%;
  height: 66rpx;
  line-height: 66rpx;
  margin-top: 30rpx;
  margin-left: 20rpx;
}

.edit .section input {
  height: 100%;
  padding-left: 20rpx;
}

.yan .section {
  width: 35%;
}

.edit .getyan {
  color: #f18c16;
  border: 1rpx solid #f0f0f0;
  height: 66rpx;
  width: 200rpx;
  text-align: center;
  line-height: 66rpx;
  position: absolute;
  top: 30rpx;
  right: 98rpx;
}

.binding {
  width: 448rpx;
  height: 70rpx;
  background-color: #1197f6;
  border-radius: 70rpx;
  margin: 150rpx auto 0;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  line-height: 70rpx;
}
