.info {
  width: 90%;
  height: 160rpx;
  box-shadow: #f0f0f0 1rpx 1rpx 30rpx 5rpx;
  margin: 22rpx auto 0;
  font-size: 30rpx;
  overflow: hidden;
}

.info .mac {
  margin-top: 30rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.info .txt {
  margin-top: 16rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.info .txt .txt2 {
  float: right;
  color: #f18c16;
}

.txtdv {
  width: 90%;
  height: 265rpx;
  margin: 0 auto;
  overflow: hidden;
  font-size: 30rpx;
  margin-top: 20rpx;
  border: 1rpx solid #f0f0f0;
  overflow: hidden;
}

.txtdv .section {
  width: 100%;
  height: 100%;
  padding: 20rpx;
}

.txtdv .section .text {
  width: 100%;
  height: 100%;
}

.upimg {
  width: 90%;
  height: 100%;
  margin: 30rpx auto;
}

.upimg .imgdv {
  width: 128rpx;
  height: 128rpx;
  margin-right: 20rpx;
}

.submit {
  width: 448rpx;
  height: 70rpx;
  background-color: #1197f6;
  border-radius: 70rpx;
  margin: 240rpx auto 0;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  line-height: 70rpx;
}

.boxbj {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 20;
  background-color: rgba(0, 0, 0, 0.5);
}

.boxbj .boxdv {
  width: 570rpx;
  height: 444rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin: 300rpx auto 0;
  overflow: hidden;
}

.boxbj .boxdv .boximg {
  width: 200rpx;
  height: 140rpx;
  margin: 40rpx auto 0;
}

.boxbj .boxdv .boximg image {
  width: 100%;
  height: 100%;
  display: inline-block;
}

.boxbj .boxdv .txt {
  font-size: 26rpx;
  text-align: center;
  margin-top: 40rpx;
}

.boxbj .boxdv .heng {
  background-color: #f0f0f0;
  width: 100%;
  height: 1rpx;
  margin-top: 60rpx;
}

.boxbj .boxdv .btn {
  width: 353rpx;
  height: 70rpx;
  background-color: #1197f6;
  border-radius: 70rpx;
  margin: 28rpx auto 0;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  line-height: 70rpx;
}

.activeClass {
  display: none;
}
