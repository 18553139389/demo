.bgcdv {
  width: 90%;
  height: 302rpx;
  margin: 20rpx auto;
  border-radius: 10rpx;
  box-shadow: #f0f0f0 1rpx 1rpx 30rpx 5rpx;
  position: relative;
}

.bgcdv .shu {
  width: 10rpx;
  height: 100%;
  background-color: #1197f6;
  border-radius: 8rpx 0 0 8rpx;
}

.bgcdv .fen {
  position: absolute;
  top: 80rpx;
  left: 50%;
  font-size: 60rpx;
  color: #1197f6;
  font-weight: 700;
  transform: translateX(-50%);
}

.bgcdv .numfen {
  position: absolute;
  top: 170rpx;
  left: 50%;
  font-size: 30rpx;
  transform: translateX(-50%);
}

.heng {
  width: 100%;
  height: 10rpx;
  background-color: #f8f8f8;
  margin-top: 50rpx;
}

.payment {
  margin: 0 auto;
  width: 100%;
  height: 70rpx;
  text-align: center;
  font-size: 30rpx;
  color: #1197f6;
}

.payment .pay_txt1, .pay_txt2 {
  display: inline-block;
  width: 96rpx;
  height: 1rpx;
  background-color: #1197f6;
}

.payment .pay_txt1 {
  margin-right: 30rpx;
  margin-bottom: 10rpx;
}

.payment .pay_txt2 {
  margin-left: 30rpx;
  margin-bottom: 10rpx;
}

.payment .pay_txt {
  display: inline-block;
  margin-top: 30rpx;
}

.listli {
  width: 100%;
  height: 155rpx;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 30rpx;
  position: relative;
}

.listli .leftdv1 {
  font-size: 32rpx;
  position: absolute;
  top: 28rpx;
  left: 30rpx;
}

.listli .leftdv2 {
  font-size: 28rpx;
  color: #999;
  position: absolute;
  bottom: 23rpx;
  left: 30rpx;
}

.listli .right {
  position: absolute;
  top: 60rpx;
  right: 30rpx;
  color: #f18c16;
}

.listli .right2 {
  position: absolute;
  top: 60rpx;
  right: 30rpx;
  color: #333;
}
