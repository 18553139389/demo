@import "../../wxParse/wxParse.wxss";

.contain {
  width: 100%;
  height: 100%;
}

.top {
  width: 100%;
  border-top: 1px solid #eee;
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.top>image {
  width: 200rpx;
  height: 140rpx;
  border-radius: 4px;
}

.list {
  width: calc(100% - 200rpx);
  height: 140rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-left: 30rpx;
  box-sizing: border-box;
}

.titles {
  width: 100%;
  font-size: 14px;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.sku,.choice {
  width: 100%;
  font-size: 12px;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.line {
  width: 100%;
  height: 10px;
  background: #F9F9F9;
}

.forms {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.all {
  width: 100%;
  height: 90rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #eee;
}

.forms-item {
  width: 280rpx;
  font-size: 14px;
  color: #333;
}

.place {
  font-size: 14px;
  color: #999;
}

.detail {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  margin-bottom: 120rpx;
}

.produce {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.produce-title {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 15px;
  color: #333;
  font-weight: 500;
  position: relative;
  padding-left: 20rpx;
  box-sizing: border-box;
}

.produce-title::after {
  content: '';
  width: 2px;
  height: 40rpx;
  background: #BE7E50;
  border-radius: 4px;
  position: absolute;
  left: 0;
  top: 25rpx;
}

.content {
  font-size: 12px;
  color: #666;
  text-align: justify;
  line-height: 18px;
}

.pay {
  width: 100%;
  height: 90rpx;
  border-top: 1px solid #eee;
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 14px;
  color: #333;
  padding: 0 0 0 30rpx;
  box-sizing: border-box;
  background: #fff;
}

.total>text {
  font-size: 18px;
  color: red;
}

.btns {
  width: 220rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background: #BE7E50;
  color: #fff;
}

input {
  font-size: 14px;
  color: #333;
  width: calc(100% - 280rpx);
}
