page {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.contain {
  width: 100%;
  height: 100%;
  border-top: 1px solid #eee;
  display: flex;
}

.nav-left {
  width: 30%;
  height: 100vh;
  background: #f8f8f8;
}

.nav-bar {
  width: 100%;
  height: 90rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 14px;
  color: #333;
  text-align: center;
}

.active {
  background: #fff;
  color: #be7e50;
  position: relative;
}

.active::after {
  content: '';
  width: 3px;
  height: 42rpx;
  border-radius: 4px;
  position: absolute;
  left: 0;
  top: 20rpx;
  background: #be7e50;
}

.nav-right {
  width: 70%;
  height: 100vh;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.list {
  width: 100%;
  /* height: 100%; */
  display: flex;
  flex-direction: column;
}

.list-item {
  width: 100%;
  height: 160rpx;
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.list-item>image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 4px;
}

.content {
  width: calc(100% - 160rpx);
  height: 160rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.titles {
  width: 100%;
  font-size: 14px;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.text {
  width: 100%;
  font-size: 12px;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.price {
  font-size: 18px;
  color: red;
  margin-right: 10rpx;
}
