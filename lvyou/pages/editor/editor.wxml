<view>
  <van-cell-group>
    <van-field value="{{username}}" name="people" clearable label="联系人：" right-icon="question-o" placeholder="请填写订单联系人姓名" bind:input="getmes" data-i="1" type="text" />
    <van-field value="{{phone}}" name="phone" clearable type="number" maxlength="11" label="手机号：" placeholder="便于接收订单信息" bind:input="getmes" data-i="2" />
    <van-field value="{{icd}}" name="icd" clearable type="text" label="身份证号：" placeholder="请填写真实证件号码" bind:input="getmes" data-i="3" />
  </van-cell-group>
  <view class="s_2" hover-class="none" hover-stop-propagation="false">
  </view>
  <view wx:if="{{type == 1}}" class="btn b_btn" hover-class="none" hover-stop-propagation="false" bindtap="add">
    <text>保存修改</text>
  </view>
  <view wx:if="{{type == 2}}" class="btn b_btn" hover-class="none" hover-stop-propagation="false" bindtap="add">
    <text>确定</text>
  </view>
</view>