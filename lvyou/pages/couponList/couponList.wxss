.contain {
  width: 100%;
  height: 100vh;
  background: #f8f8f8;
  padding: 30rpx;
  box-sizing: border-box;
}

.use {
  width: 97%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 14px;
  color: #333;
  border-radius: 4px;
  box-shadow: 1px 1px 5px #eee;
  background: #fff;
  margin: 0 auto;
}

.list {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.list-item {
  width: 100%;
  height: 220rpx;
  position: relative;
  margin-top: 30rpx;
}

.bg {
  width: 100%;
  height: 220rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 0;
}

.wrapper {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 220rpx;
  display: flex;
  align-items: center;
  z-index: 10;
}

.price {
  width: 140rpx;
  text-align: center;
  font-size: 18px;
  color: #BE7E50;
  padding-left: 40rpx;
}

.content {
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-left: 100rpx;
}

.tit {
  font-size: 14px;
  color: #333;
}

.date {
  font-size: 12px;
  color: #666;
}

.no {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 14px;
  color: #999;
}

.no>image {
  width: 300rpx;
  height: 300rpx;
}

