.contain {
  width: 100%;
  height: 100vh;
  position: relative;
}

.bg {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 20;
}

.forms {
  position: absolute;
  width: 90%;
  left: 50%;
  top: 55%;
  margin-left: -45%;
  background: #fff;
  border-radius: 4px;
  box-shadow: 1px 1px 4px #eee;
  z-index: 90;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.items {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #eee;
  box-sizing: border-box;
}

.titles {
  width: 200rpx;
  font-size: 14px;
  color: #333;
}

.place {
  font-size: 14px;
  color: #999;
}

input {
  width: calc(100% - 200rpx);
  font-size: 14px;
  color: #333;
}

.submit {
  width: 90%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 15px;
  color: #fff;
  background: #be7e50;
  border-radius: 20px;
  position: absolute;
  left: 50%;
  bottom: 6%;
  margin-left: -45%;
  z-index: 60;
}

.according {
  width: 90%;
  font-size: 12px;
  color: #be7e50;
  position: absolute;
  left: 50%;
  bottom: 1.5%;
  margin-left: -45%;
  z-index: 60;
  text-align: center
}