/* components/classify/index.wxss */
.classify{
  position:absolute;
  top:0;
  left:0;
  display:flex;
  justify-content:center;
  align-items:center;
  width:100vw;
  height:100vh;
  background-color:rgba(0,0,0,.4);
}
.classify-box{
  
  width:80%;
  max-height:60vh;
  padding:20rpx;
  background-color:#fff;
  border-radius:8rpx;
}
.classify-content{
  display:flex;
  flex-wrap:wrap;
  justify-content: flex-start;
  align-items: center;
  /* width:80%;
  height:60vh; */
  
  
}
.classify-list{
  display:flex;
  /* flex-wrap:wrap; */
  flex-direction: column;
  align-items:center;
  justify-content:center;
  width:25%;
  height:188rpx;
}
.classify-list image{
  width:50rpx;
  height:50rpx;
  padding-top:24rpx;
}
.classify-list text{
  font-size:28rpx;
  color:#323232;
  padding-top:24rpx;
}