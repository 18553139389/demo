/* components/daijinquan/index.wxss */

.dj_box {
  position: relative;
  width: 100%;
  height: 240rpx;
  background-color: #fff;
  border-radius: 16rpx;
  border: 1px solid #e6e6e6;
}

.dj_box::before, .dj_box::after {
  content: "";
  position: absolute;
  bottom: 50rpx;
  display: block;
  width: 40rpx;
  height: 40rpx;
  background-color: #fafafa;
  border-radius: 100%;
}

.dj_box::before {
  left: -28rpx;
  border-right: 1px solid #e6e6e6;
  /* box-shadow:-10rpx 0 10rpx 0rpx rgba(0, 0,0, .1) inset; */
}

.dj_box::after {
  right: -28rpx;
  border-left: 1px solid #e6e6e6;
  /* box-shadow:-10rpx 0 10rpx 0rpx rgba(0, 0,0, .1) inset; */
}

.dj_f {
  font-size: 39rpx;
  font-weight: bold;
  color: rgba(241, 0, 45, 1);
}

.dj_m {
  font-size: 58rpx;
  font-weight: bold;
  color: rgba(241, 0, 45, 1);
}

.dj_header {
  display: flex;
  align-items: center;
  height: 169rpx;
  padding: 0 47rpx;
  border-bottom: 1px dotted #e6e6e6;
}

.dj_title {
  display: block;
  width: 100%;
  text-align: center;
  font-size: 34rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.dj_btn {
  width: 100rpx;
  height: 44rpx;
  background: rgba(0, 74, 86, 1);
  border-radius: 22rpx;
  flex: 0 0 auto;
  text-align: center;
  line-height: 36rpx;
}

.dj_btn text {
  font-size: 22rpx;
  color: #fff;
}
.dj_mes{display:flex;justify-content:space-between;padding:0 42rpx;line-height:70rpx;}
.dj_mes text{font-size:24rpx;}
.dj_mes text:nth-of-type(1){color:#666666;}
.dj_mes text:nth-of-type(2){color:#012931;}

